<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:background="@color/docfinder">


        <TextView
            android:id="@+id/namelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/namelabel"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/namelabel"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/speciallabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namelabel"
            android:text="@string/speciallabel"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/special"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_toRightOf="@+id/speciallabel"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/feedbacklabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/speciallabel"
            android:text="@string/feedbacklabel"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/special"
            android:layout_toRightOf="@+id/feedbacklabel"
            android:textSize="12dp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/feedbacklabel"
            android:src="@drawable/maps1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Email"
            android:id="@+id/button_send"
            android:layout_below="@+id/imageView2"
            android:textColor="#000000"
            android:background="#FFFFFF"
             />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call Doctor"
            android:id="@+id/button_call"
            android:layout_below="@+id/button_send"
            android:background="#9a9a9a"/>

    </RelativeLayout>
