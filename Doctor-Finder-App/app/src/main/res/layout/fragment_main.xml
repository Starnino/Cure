<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MainFragment">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:background="@color/docfinder"
            android:focusable="true"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="false"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/logodc"
                android:layout_gravity="center_horizontal"
                android:paddingTop="70dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:clickable="true"
                android:padding="@dimen/activity_horizontal_margin"

                android:focusable="true"
                android:contextClickable="true"
                android:id="@+id/spec_select"
                android:background="#ffffff">

                <TextView
                    android:textSize="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="Cerca il dottore"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:clickable="true"
                android:padding="@dimen/activity_horizontal_margin"
                android:focusable="true"
                android:contextClickable="true"
                android:id="@+id/citta_select"
                android:background="#ffffff"
                android:layout_marginTop="10dp">


                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Seleziona Categoria"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:id="@+id/select_spec_button"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/specialization_text"
                    android:layout_below="@id/select_spec_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#212121"
                    android:text="Tutte"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/tvNumber1"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:clickable="true"
                android:padding="@dimen/activity_horizontal_margin"

                android:focusable="true"
                android:contextClickable="true"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/city_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="Tutte"
                    android:layout_below="@id/select_city_button"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#212121"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Seleziona CittÃ "
                    android:textColor="@color/white"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:id="@+id/select_city_button"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabmain"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:focusable="true"
            android:clickable="true"
            app:backgroundTint="@color/docfinder"
            app:backgroundTintMode="src_over"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            app:layout_anchorGravity="bottom|end"/>


    </LinearLayout>
</FrameLayout>
