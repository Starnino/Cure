<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.doctorfinderapp.doctorfinder.functions.RoundedImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/profile_image"
        android:src="@drawable/doctor_avatar"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:layout_toEndOf="@id/profile_image"
        android:layout_marginStart="@dimen/fab_margin"
        android:id="@+id/linearLayout2">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="@dimen/fab_margin"
            android:textColor="@color/colorPrimaryDark"
            android:text="Nome" />

        <TextView
            android:text="Specializzazione"
            android:id="@+id/special"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark" />

        <RatingBar
            android:layout_marginTop="-5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="4"
            android:scaleX="0.55"
            android:scaleY="0.55"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="-58dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/fab_margin"
            android:text="@string/doctor_map"
            android:id="@+id/visualizza_profilo"
            android:textColor="@color/docfinder"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_gravity="right|bottom"
            android:textAllCaps="false"
            android:layout_marginBottom="@dimen/fab_margin"/>

    </LinearLayout>

</RelativeLayout>