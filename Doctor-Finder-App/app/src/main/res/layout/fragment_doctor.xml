<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/google_grey"
    android:theme="@style/AppTheme"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.DoctorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="32dp">

        <android.support.v7.widget.CardView

            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/FirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:padding="@dimen/activity_horizontal_margin">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:id="@+id/ivContactItem1"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:visibility="visible"
                        app:iiv_color="@color/colorPrimaryDark"
                        app:iiv_icon="gmd-account_circle"/>

                    <TextView
                        android:id="@+id/tvNumber1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:text="Nessun nome dichiarato"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#212121"
                        android:layout_alignTop="@+id/ivContactItem1"
                        android:layout_toEndOf="@+id/ivContactItem1"
                        android:layout_toRightOf="@+id/ivContactItem1"/>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    android:background="@color/google_grey"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <RelativeLayout
                    android:id="@+id/Spec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:padding="@dimen/activity_horizontal_margin">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:id="@+id/ivContactItem2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_centerVertical="true"
                        android:visibility="visible"
                        app:iiv_color="@color/colorPrimaryDark"
                        app:iiv_icon="gmd-work"/>

                    <TextView
                        android:id="@+id/txtSpec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_toEndOf="@id/ivContactItem2"
                        android:layout_toRightOf="@id/ivContactItem2"
                        android:text="Specializzazione:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#212121" />

                    <TextView
                        android:id="@+id/specializations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtSpec"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="8dp"
                        android:layout_toEndOf="@id/ivContactItem2"
                        android:layout_toRightOf="@id/ivContactItem2"
                        android:text="Nessuna specializzazione dichiarata"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#727272" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/google_grey"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:padding="@dimen/activity_horizontal_margin">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:id="@+id/ivContactItem6"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_centerVertical="true"
                        android:visibility="visible"
                        app:iiv_color="@color/colorPrimaryDark"
                        app:iiv_icon="gmd-info_outline"/>


                    <TextView
                        android:id="@+id/tvNumber6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_toEndOf="@id/ivContactItem6"
                        android:layout_toRightOf="@id/ivContactItem6"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Info:"
                        android:clickable="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#212121" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvNumber6"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_toEndOf="@id/ivContactItem6"
                        android:layout_toRightOf="@id/ivContactItem6"
                        android:maxLines="10"
                        android:id="@+id/doctor_info"
                        android:text="Informazioni"
                        android:clickable="true"
                        android:autoLink="web"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#727272" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/google_grey"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <RelativeLayout
                    android:id="@+id/telefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:padding="@dimen/activity_horizontal_margin">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:id="@+id/ivContactphone"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_centerVertical="true"
                        android:visibility="visible"
                        app:iiv_color="@color/colorPrimaryDark"
                        app:iiv_icon="gmd-phone"/>

                    <TextView
                        android:id="@+id/txtphone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:autoLink="phone"
                        android:layout_toEndOf="@id/ivContactphone"
                        android:layout_toRightOf="@id/ivContactphone"
                        android:text="Telefono:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#212121" />

                    <TextView
                        android:id="@+id/phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtphone"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="8dp"
                        android:layout_toEndOf="@id/ivContactphone"
                        android:layout_toRightOf="@id/ivContactphone"
                        android:text="Nessun numero dichiarato"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#727272" />


                    <ImageButton
                        android:id="@+id/call_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:background="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:checked="true"
                        android:scaleX="0.6"
                        android:scaleY="0.6"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:onClick="onClick"
                        android:padding="6dp" />



                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/google_grey"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <RelativeLayout
                    android:id="@+id/Exp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:padding="@dimen/activity_horizontal_margin">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:id="@+id/ivContactItem3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        app:iiv_color="@color/colorPrimaryDark"
                        app:iiv_icon="gmd-library-books"/>

                    <TextView
                        android:id="@+id/tvNumber3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_toEndOf="@id/ivContactItem3"
                        android:layout_toRightOf="@id/ivContactItem3"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Anni di esperienza: "
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#212121" />

                    <TextView
                        android:id="@+id/years"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvNumber3"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="8dp"
                        android:layout_toEndOf="@id/ivContactItem3"
                        android:layout_toRightOf="@id/ivContactItem3"
                        android:text="Non dichiarato"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#727272" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    android:background="@color/google_grey"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:id="@+id/Work">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:id="@+id/ivContactItem4"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        app:iiv_color="@color/colorPrimaryDark"
                        app:iiv_icon="gmd-explore"/>

                    <TextView
                        android:id="@+id/tvNumber4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_toEndOf="@id/ivContactItem4"
                        android:layout_toRightOf="@id/ivContactItem4"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Luogo di lavoro:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#212121" />

                    <ImageButton
                        android:id="@+id/maps_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:background="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:checked="true"
                        android:scaleX="0.6"
                        android:scaleY="0.6"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:onClick="onClick"
                        android:padding="6dp" />

                    <TextView
                        android:id="@+id/cityPlace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvNumber4"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="8dp"
                        android:layout_toEndOf="@id/ivContactItem4"
                        android:layout_toRightOf="@id/ivContactItem4"
                        android:text="Città"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#727272"
                        android:layout_toStartOf="@id/maps_button"
                        android:layout_toLeftOf="@id/maps_button"/>


                    <TextView
                        android:id="@+id/workPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Via"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#727272"
                        android:layout_below="@+id/cityPlace"
                        android:layout_alignStart="@+id/cityPlace"
                        android:layout_alignLeft="@+id/cityPlace"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/google_grey"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <RelativeLayout
                    android:id="@+id/visit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:padding="@dimen/activity_horizontal_margin">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:id="@+id/ivContactItem8"
                        android:layout_width="24dp"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:visibility="visible"
                        app:iiv_color="@color/colorPrimaryDark"
                        app:iiv_icon="gmd-watch_later"/>

                    <TextView
                        android:id="@+id/txtvisit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_toEndOf="@id/ivContactItem8"
                        android:layout_toRightOf="@id/ivContactItem8"
                        android:text="Orario:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#212121" />

                    <TextView
                        android:id="@+id/visit_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/ivContactItem8"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_toEndOf="@+id/ivContactItem8"
                        android:layout_toRightOf="@+id/ivContactItem8"
                        android:text="Nessun prezzo dichiarato"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#727272" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/google_grey"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <RelativeLayout
                    android:id="@+id/Price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="16dp">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:id="@+id/ivContactItem7"
                        android:layout_width="24dp"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:visibility="visible"
                        app:iiv_color="@color/colorPrimaryDark"
                        app:iiv_icon="gmd-attach_money"/>

                    <TextView
                        android:id="@+id/txtprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_toEndOf="@id/ivContactItem7"
                        android:layout_toRightOf="@id/ivContactItem7"
                        android:text="Prezzo medio della visita:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#212121" />

                    <TextView
                        android:id="@+id/price_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/ivContactItem7"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_toEndOf="@+id/ivContactItem7"
                        android:layout_toRightOf="@+id/ivContactItem7"
                        android:text="Nessun prezzo dichiarato"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#727272" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/google_grey"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <RelativeLayout
                    android:id="@+id/feedback_relative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:padding="@dimen/activity_horizontal_margin">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:id="@+id/ivContactItem5"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:visibility="visible"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        app:iiv_color="@color/colorPrimaryDark"
                        app:iiv_icon="gmd-supervisor_account"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/tvNumber5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_toEndOf="@id/ivContactItem5"
                        android:layout_toRightOf="@id/ivContactItem5"
                        android:text="Feedback:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#212121" />

                    <TextView
                        android:id="@+id/float_feedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:text="4.9"
                        android:layout_below="@id/tvNumber5"
                        android:layout_toEndOf="@id/ivContactItem5"
                        android:layout_toRightOf="@id/ivContactItem5"
                        android:textSize="50sp"
                        android:layout_gravity="bottom"/>

                    <ImageView
                        android:id="@+id/feedback_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:background="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:checked="true"
                        android:scaleX="0.6"
                        android:scaleY="0.6"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:onClick="onClick"
                        android:padding="6dp" />

                    <RatingBar
                        android:id="@+id/ratingBarDoctorProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:isIndicator="true"
                        android:layout_below="@+id/tvNumber5"
                        android:layout_alignStart="@id/float_feedback"
                        android:layout_alignLeft="@id/float_feedback"
                        android:scaleX="0.3"
                        android:scaleY="0.3"
                        android:transformPivotX="110dp"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentBottom="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/num_feedback"
                        android:text="0"
                        android:layout_below="@+id/tvNumber5"
                        android:layout_toEndOf="@id/float_feedback"
                        android:layout_toRightOf="@id/float_feedback"
                        android:layout_marginLeft="9dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="35dp"/>

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="8dp"
            android:layout_marginStart="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/friends_tip"
                android:textAlignment="center"
                android:paddingBottom="@dimen/fab_margin"
                android:textColor="@color/docfinder"
                android:textSize="20sp" android:layout_margin="10dp"/>

            <android.support.v7.widget.RecyclerView
                android:paddingTop="10dp"
                android:id="@+id/my_recycler_friends2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

                <com.pnikosis.materialishprogress.ProgressWheel
                    android:id="@+id/progress_tip"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"/>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_facebook_tip"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/com_facebook_favicon_white"
                    android:tint="@color/colorPrimaryDark"
                    android:visibility="gone"/>

                <TextView
                    android:layout_margin="@dimen/fab_margin"
                    android:id="@+id/suggest_null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/effettua_login_facebook"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:visibility="gone"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
